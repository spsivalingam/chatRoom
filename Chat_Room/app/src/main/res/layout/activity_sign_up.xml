<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uncc.sivalingam.chat_room.SignUpActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="32dp"
        android:id="@+id/fnameSignUp"
        android:hint="First Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/fnameSignUp"
        android:layout_alignRight="@+id/fnameSignUp"
        android:layout_alignEnd="@+id/fnameSignUp"
        android:layout_marginTop="21dp"
        android:id="@+id/lnameSignUp"
        android:hint="Last Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/lnameSignUp"
        android:layout_alignRight="@+id/lnameSignUp"
        android:layout_alignEnd="@+id/lnameSignUp"
        android:layout_marginTop="26dp"
        android:id="@+id/emailSignUp"
        android:hint="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/emailSignUp"
        android:layout_alignRight="@+id/emailSignUp"
        android:layout_alignEnd="@+id/emailSignUp"
        android:layout_marginTop="21dp"
        android:id="@+id/passwordSignUp"
        android:hint="Choose Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/passwordSignUp"
        android:layout_alignRight="@+id/passwordSignUp"
        android:layout_alignEnd="@+id/passwordSignUp"
        android:layout_marginTop="26dp"
        android:id="@+id/checkpasswordSignUp"
        android:hint="Repeat Password" />

    <Button
        android:text="@string/cancelSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkpasswordSignUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="30dp"
        android:id="@+id/cancelButton" />

    <Button
        android:text="@string/signupSignUpPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cancelButton"
        android:layout_alignRight="@+id/checkpasswordSignUp"
        android:layout_alignEnd="@+id/checkpasswordSignUp"
        android:id="@+id/signButtonUp" />
</RelativeLayout>
